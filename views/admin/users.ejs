<h1>Manage Users</h1>

<% if (users.length > 0) { %>
    <table class="data-table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Blood Group</th>
                <th>Status</th>
                <th>Registered</th>
                <!-- <th>Actions</th> -->
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
                <tr>
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                    <td><%= user.phone || 'N/A' %></td>
                    <td><%= user.bloodGroup || 'N/A' %></td>
                    <td>
                        <% if (user.isActive) { %>
                            <span class="status-completed">Active</span>
                        <% } else { %>
                            <span class="status-cancelled">Inactive</span>
                        <% } %>
                    </td>
                    <td><%= user.createdAt.toLocaleDateString() %></td>
                    <!-- <td>
                        <form action="/admin/users/<%= user._id %>/toggle-status" method="POST" style="display: inline;">
                            <input type="hidden" name="_method" value="PUT">
                            <% if (user.isActive) { %>
                                <button type="submit" class="btn btn-warning btn-small">Deactivate</button>
                            <% } else { %>
                                <button type="submit" class="btn btn-success btn-small">Activate</button>
                            <% } %>
                        </form>
                    </td> -->
                </tr>
            <% }) %>
        </tbody>
    </table>
<% } else { %>
    <p>No users found.</p>
<% } %>